#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

if [ -z "$1" ]
  then
    echo "No input file. Usage: itinerary-viewer <yml>"
    exit
fi

SOURCE=$(basename "${1}" '.yml')

trap 'jobs; kill %1;' SIGINT
# In pwd
${DIR}/run_backend.sh &
cd "${DIR}/../"
${DIR}/run_frontend.sh ${SOURCE}



